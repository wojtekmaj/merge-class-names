{
  "name": "merge-class-names",
  "version": "1.2.0",
  "description": "A function that merges given class names, no matter their format: string with single or multiple class names or an array of class names. Filters out invalid class names as well.",
  "main": "dist/entry.js",
  "es6": "src/entry.js",
  "scripts": {
    "build": "babel src -d dist --ignore **/__tests__",
    "prepublishOnly": "yarn run build",
    "test": "yarn run test-eslint && yarn run test-jest",
    "test-eslint": "eslint src/ --ext .jsx,.js",
    "test-jest": "jest",
    "test-jest-coverage": "jest --coverage"
  },
  "keywords": [
    "class",
    "class names",
    "class list",
    "merge"
  ],
  "author": {
    "name": "Wojciech Maj",
    "email": "kontakt@wojtekmaj.pl"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "babel-jest": "^24.0.0",
    "eslint": "^5.5.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "jest": "^24.0.0"
  },
  "files": [
    "LICENSE",
    "README.md",
    "dist/",
    "src/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wojtekmaj/merge-class-names.git"
  }
}
