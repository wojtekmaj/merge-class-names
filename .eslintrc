{
  "extends": "airbnb-base",
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "rules": {
    "function-paren-newline": "off",
    "global-require": "off",
    "max-len": "error",
    "no-param-reassign": ["error", { "props": true, "ignorePropertyModificationsFor": ["canvas", "element"] }],
    "prefer-destructuring": "warn",
    "prefer-spread": "warn"
  }
}
